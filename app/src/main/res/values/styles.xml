<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="circleButtonDark" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:background">@drawable/circle_button_dark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="circleButtonLight" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:background">@drawable/circle_button_light</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="buttonDark" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">106dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="buttonLight" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">106dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>